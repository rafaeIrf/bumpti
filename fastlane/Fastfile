# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :release do
    setup_ci if ENV['CI']
    
    # App Store Connect API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"], # Base64 encoded .p8 content
      is_key_content_base64: true
    )
    
    sync_code_signing(
        api_key: api_key,
        type: "appstore",
        git_branch: "master",
        app_identifier: "com.bumpti",
        team_id: ENV['TEAM_ID'],
        git_url: ENV['MATCH_GIT_URL']
    )
    
    update_code_signing_settings(
        path: "./ios/Bumpti.xcodeproj",
        bundle_identifier: "com.bumpti",
        profile_name: "match AppStore com.bumpti",
        use_automatic_signing: false,
        team_id: ENV['TEAM_ID'],
        code_sign_identity: "Apple Distribution"
    )
    
    # Set build number using GitHub run number
    update_info_plist(
      xcodeproj: "./ios/Bumpti.xcodeproj",
      plist_path: "Bumpti/Info.plist",
      block: proc do |plist|
        plist["CFBundleVersion"] = ENV["BUILD_NUMBER"]
      end
    )
    
    # Build the app
    build_app(
      workspace: "./ios/Bumpti.xcworkspace",
      scheme: "Bumpti",
      export_method: "app-store",
      configuration: "Release",
      clean: true,
      output_directory: "./ios/build",
      output_name: "bumpti.ipa",
      export_xcargs: "-verbose",
      buildlog_path: "./ios/build/logs",
      include_symbols: true,
      include_bitcode: false
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      api_key: api_key
    )
    
    # Upload dSYMs to Firebase Crashlytics
    upload_symbols_to_crashlytics(
      gsp_path: "./ios/GoogleService-Info.plist",
      binary_path: "./ios/Pods/FirebaseCrashlytics/upload-symbols"
    )
  end

  desc "Build only (no submit)"
  lane :build do
    setup_ci if ENV['CI']
    
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true
    )

    sync_code_signing(
        api_key: api_key,
        type: "appstore",
        git_branch: "main",
        app_identifier: "com.bumpti",
        team_id: ENV['TEAM_ID'],
        git_url: ENV['MATCH_GIT_URL']
    )
    
    update_code_signing_settings(
        path: "./ios/Bumpti.xcodeproj",
        bundle_identifier: "com.bumpti",
        profile_name: "match AppStore com.bumpti",
        use_automatic_signing: false,
        team_id: ENV['TEAM_ID'],
        code_sign_identity: "Apple Distribution"
    )
    
    update_info_plist(
      xcodeproj: "./ios/Bumpti.xcodeproj",
      plist_path: "Bumpti/Info.plist",
      block: proc do |plist|
        plist["CFBundleVersion"] = ENV["BUILD_NUMBER"]
      end
    )
    
    build_app(
      workspace: "./ios/Bumpti.xcworkspace",
      scheme: "Bumpti",
      export_method: "app-store",
      configuration: "Release",
      clean: true,
      output_directory: "./ios/build",
      output_name: "bumpti.ipa"
    )
  end
end

platform :android do
  desc "Build and upload to Play Store (Internal)"
  lane :release do
    # Android: Increment versionCode using gradle property
    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "./android",
      properties: {
        "android.injected.signing.store.file" => ENV["KEYSTORE_PATH"],
        "android.injected.signing.store.password" => ENV["KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["KEY_PASSWORD"],
        "android.injected.version.code" => ENV["BUILD_NUMBER"]
      }
    )
    
    # Upload to Play Store internal track
    upload_to_play_store(
      package_name: "com.bumpti",
      track: "internal",
      release_status: "draft",
      aab: "./android/app/build/outputs/bundle/release/app-release.aab",
      json_key: ENV["GOOGLE_PLAY_JSON_KEY_PATH"],
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end

  desc "Build only (no submit)"
  lane :build do
    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "./android",
      properties: {
        "android.injected.signing.store.file" => ENV["KEYSTORE_PATH"],
        "android.injected.signing.store.password" => ENV["KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["KEY_PASSWORD"],
        "android.injected.version.code" => ENV["BUILD_NUMBER"]
      }
    )
  end
end
