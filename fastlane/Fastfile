# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :release do
    setup_ci if ENV['CI']
    
    # App Store Connect API Key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"], # Base64 encoded .p8 content
      is_key_content_base64: true
    )
    
    # Match for certificate management
    match(
      type: "appstore",
      readonly: is_ci,
      git_url: ENV["MATCH_GIT_URL"],
      app_identifier: "com.bumpti",
      api_key: api_key
    )
    
    # Set build number using GitHub run number
    update_info_plist(
      xcodeproj: "ios/bumpti.xcodeproj",
      plist_path: "bumpti/Info.plist",
      block: proc do |plist|
        plist["CFBundleVersion"] = ENV["BUILD_NUMBER"]
      end
    )
    
    # Build the app
    build_app(
      workspace: "bumpti.xcworkspace",
      scheme: "bumpti",
      export_method: "app-store",
      clean: true,
      output_directory: "./build",
      output_name: "bumpti.ipa"
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      api_key: api_key
    )
  end

  desc "Build only (no submit)"
  lane :build do
    setup_ci if ENV['CI']
    
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true
    )
    
    match(
      type: "appstore",
      readonly: is_ci,
      git_url: ENV["MATCH_GIT_URL"],
      app_identifier: "com.bumpti",
      api_key: api_key
    )
    
    update_info_plist(
      xcodeproj: "ios/bumpti.xcodeproj",
      plist_path: "bumpti/Info.plist",
      block: proc do |plist|
        plist["CFBundleVersion"] = ENV["BUILD_NUMBER"]
      end
    )
    
    build_app(
      workspace: "bumpti.xcworkspace",
      scheme: "bumpti",
      export_method: "app-store",
      clean: true,
      output_directory: "./build",
      output_name: "bumpti.ipa"
    )
  end
end

platform :android do
  desc "Build and upload to Play Store (Internal)"
  lane :release do
    # Android: Increment versionCode using gradle property
    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "./android",
      properties: {
        "android.injected.signing.store.file" => ENV["KEYSTORE_PATH"],
        "android.injected.signing.store.password" => ENV["KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["KEY_PASSWORD"],
        "android.injected.version.code" => ENV["BUILD_NUMBER"]
      }
    )
    
    # Upload to Play Store internal track
    upload_to_play_store(
      track: "internal",
      release_status: "draft",
      aab: "./android/app/build/outputs/bundle/release/app-release.aab",
      json_key: ENV["GOOGLE_PLAY_JSON_KEY_PATH"],
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end

  desc "Build only (no submit)"
  lane :build do
    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "./android",
      properties: {
        "android.injected.signing.store.file" => ENV["KEYSTORE_PATH"],
        "android.injected.signing.store.password" => ENV["KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["KEY_PASSWORD"],
        "android.injected.version.code" => ENV["BUILD_NUMBER"]
      }
    )
  end
end
